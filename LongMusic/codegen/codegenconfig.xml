<?xml version="1.0" encoding="utf-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="codegen.xsd">
    <variables>
        <variable name="developer" value="longbro"/>
        <variable name="company" value="多啦学娱网络科技有限公司"/>
        <variable name="system" value="com.longbro"/>
        <variable name="domain" value="com.longbro"/>
        <variable name="email" value="1459892910@qq.com"/>
    </variables>

    <templates>
        <template id="dao" path="dao.ftl"/>
        <template id="daoImpl" path="DaoImpl.ftl"/>
        <template id="service"  path="service.ftl"/>
        <template id="serviceImpl"  path="serviceImpl.ftl"/>
        <template id="mapping"  path="mapping.ftl"/>
        <template id="entity"  path="entity.ftl"/>
        <template id="controller" path="controller.ftl" />
    </templates>

    <files baseDir="D:\aaaaaaa\LongBro\">
        <file refTemplate="mapping" filename="{class}.map.xml" dir="{system}\bean"
              sub="true" override="true"/>
        <file refTemplate="dao" filename="{class}Dao.java" dir="{system}\dao" sub="true"  override="true"/>
        <file refTemplate="daoImpl" filename="{class}DaoImpl.java" dir="{system}\dao\imgl" sub="true"  override="true"/>
    	<file refTemplate="service" filename="{class}service.java" dir="{system}\service" sub="true"  override="true"/>
        <file refTemplate="serviceImpl" filename="{class}serviceImpl.java" dir="{system}\service\imgl" sub="true"  override="true"/>

        <file refTemplate="entity" filename="{class}.java" dir="{system}\bean"
              sub="true" override="true"/>
        <file refTemplate="controller" filename="{class}Controller.java"
            dir="{system}\controller" sub="false" override="true"/>
       
   </files>
    <table tableName="song">
        <variable name="class" value="Song" />
        <variable name="package" value="song" />
    </table>
</config>